{
  "name": "possum",
  "version": "1.0.0",
  "description": "Point Of Sale Solution for Unified Management",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm rebuild --runtime=electron --target=37.2.3 && concurrently \"npm run watch:preload\" \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "cd app && npm run dev",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "cd app && vite build && cd .. && npm run build:preload && electron-builder",
    "postinstall": "cd app && npm install && cd .. && electron-rebuild",
    "init-db": "npm rebuild && node scripts/init-db.js",
    "build:preload": "vite build --config electron/preload.vite.config.js",
    "watch:preload": "vite build --config electron/preload.vite.config.js --watch"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.3.9",
    "express": "^5.1.0",
    "wait-on": "^8.0.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "vite": "^7.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
