{
  "name": "possum",
  "version": "1.0.0",
  "description": "Point Of Sale Solution for Unified Management",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run init-db && npm rebuild --runtime=electron --target=37.2.3 && concurrently \"npm run watch:preload\" \"npm run watch:electron\" \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "cd app && npm run dev",
    "watch:electron": "tsc --watch",
    "dev:electron": "wait-on tcp:5173 && wait-on dist/electron/main.js && electron .",
    "build": "tsc && cd app && vite build && cd .. && npm run build:preload && electron-builder",
    "postinstall": "cd app && npm install && cd .. && npx electron-rebuild",
    "init-db": "npm rebuild better-sqlite3 && ts-node --esm scripts/init-db.ts",
    "build:preload": "vite build --config electron/preload.vite.config.ts",
    "watch:preload": "vite build --config electron/preload.vite.config.ts --watch"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.3.9",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mime": "^4.0.7",
    "multer": "^2.0.2",
    "uuid": "^13.0.0",
    "wait-on": "^8.0.4",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/electron": "^1.4.38",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.3",
    "@types/uuid": "^10.0.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
